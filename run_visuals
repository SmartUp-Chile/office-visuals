#!/usr/bin/env python3
"""
Office Visual System Launcher
Usage: ./run_visuals [options]
"""
import os
import sys
import subprocess

def main():
    # Get the directory where this script is located
    script_dir = os.path.dirname(os.path.abspath(__file__))
    
    # Path to the main visual system (now in same directory)
    main_script = os.path.join(script_dir, "main.py")
    
    if not os.path.exists(main_script):
        print("❌ Office Visual System not found!")
        print(f"Expected: {main_script}")
        sys.exit(1)
    
    # Forward all arguments to the main script
    cmd = [sys.executable, main_script] + sys.argv[1:]
    
    try:
        subprocess.run(cmd)
    except KeyboardInterrupt:
        pass
    except Exception as e:
        print(f"❌ Error running visuals: {e}")

if __name__ == "__main__":
    main()
